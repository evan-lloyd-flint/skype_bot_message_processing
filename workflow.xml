<?xml version="1.0" encoding="UTF-8"?>

<workflow-app xmlns="uri:oozie:workflow:0.1" name="skype_bot_task">

  <start to="batch-node" />

    <action name="batch-node">
      <shell xmlns="uri:oozie:shell-action:0.1">
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <exec>/user/maria_dev/skype_bot/ooze.sh</exec>
        <file>/user/maria_dev/skype_bot/ooze.sh</file>
        <capture-output />
      </shell>
      <ok to="end" />
      <error to="fail" />
    </action>

  <kill name="fail">
    <message>Oozie task failed</message>
  </kill>

  <end name="end" />

</workflow-app>
