<?xml version="1.0" encoding="UTF-8"?>

<workflow-app xmlns="uri:oozie:workflow:0.2" name="skype_bot_task">

  <start to="batch-node" />

    <action name="batch-node">
      <sqoop xmlns="uri:oozie:sqoop-action:0.2">
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
          <property>
            <name>mapred.job.queue.name</name>
            <value>${queueName}</value>
          </property>
        </configuration>
        <command>version</command>
      </sqoop>
      <ok to="end" />
      <error to="fail" />
    </action>

  <kill name="fail">
    <message>Oozie task failed</message>
  </kill>

  <end name="end" />

</workflow-app>
